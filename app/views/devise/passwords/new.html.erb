<div class="h-[800px]  mx-auto flex items-center justify-center inline-block align-middle ">
  <div class="bg-white p-8 rounded shadow-md w-96 border border-gray-300">
    <h2 class="text-2xl font-bold mb-4 text-center">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <!-- Mostrar errores -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Campo Email -->
      <div class="mb-4">
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full border rounded-md shadow-sm" %>
      </div>

      <!-- Botón de envío -->
      <div>
        <%= f.submit "Send me reset password instructions", class: "w-full bg-black text-white py-2 rounded-md" %>
      </div>
    <% end %>
  </div>
</div>
