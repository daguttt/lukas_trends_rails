<div class="h-[800px]  mx-auto flex items-center justify-center inline-block align-middle ">
  <div class="bg-white p-8 rounded shadow-md w-96 border border-gray-300">
    <h2 class="text-2xl font-bold mb-4 text-center align-center">Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- Campo Email -->
      <div class="mb-4">
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full border rounded-md shadow-sm" %>
      </div>

      <!-- Campo Password -->
      <div class="mb-4">
        <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 p-2 w-full border rounded-md shadow-sm" %>
      </div>

      <!-- Recordar Sesión (Opcional) -->
      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, "Remember me", class: "text-sm font-medium text-gray-700" %>
        </div>
      <% end %>

      <!-- Botón de Login -->
      <div>
        <%= f.submit "Log in", class: "w-full bg-black text-white py-2 rounded-md" %>
      </div>
    <% end %>
  
    <%= render "devise/shared/links" %>
  </div>
</div>
